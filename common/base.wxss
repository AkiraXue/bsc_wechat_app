/* pages/myHealth/myHealth.wxss */
page {
	background-color: #252D46;
}

.myInfoBox .container {
	padding: 40rpx 0;
	margin: 0 40rpx;
	border-bottom: solid 1px rgba(255, 255, 255, 0.1);
	color: #ffffff;
}

.myInfoBox .container .title {
	font-size: 24rpx;
	display: flex;
	flex-direction: row;
	align-items: baseline;
}

.f-20 {
	font-size: 40rpx;
	margin-right: 10rpx;
}

.myInfoBox .infoBox {
	padding: 40rpx 0;
	margin: 0 40rpx;
}

.myInfoBox .infoBox .textBox {
	border-radius: 26px;
	background: linear-gradient(-45deg, #7E00FF, #0078FF);
	padding: 40rpx 30rpx;
	color: #ffffff;
	font-size: 24rpx;
	line-height: 44rpx;
	margin-bottom: 40rpx;
}

.myInfoBox .infoBox .imgBox {
	width: 100%;
	margin-bottom: 40rpx;
}

.myInfoBox .infoBox .imgBox .infoImg {
	width: 100%;
	height: auto;
	display: block;
}

.toggleTextBox {
	border-radius: 26px;
	background: linear-gradient(-45deg, #7E00FF, #0078FF);
	padding: 10rpx 30rpx;
	color: #ffffff;
	font-size: 24rpx;
	line-height: 44rpx;
	margin-bottom: 40rpx;
}

.toggleTextBox .toggleTitle {
	display: flex;
	flex-direction: row;
	align-items: center;
	height: 80rpx;
}

.toggleTextBox .toggleTitle .title{
	flex: 1;
	line-height: 80rpx;
}

.toggleTextBox .toggleTitle .toggleArrow {
	display: block;
	width: auto;
	height: 48rpx;
	transition: all 0.2s;
}

.toggleTextBox .toggleCon {
	border-top: solid 1rpx rgba(255, 255, 255, 0.1);
	padding: 20rpx 0;
	transition: all 0.2s;
	
}

.toggleTextBox .toggleCon.hidden {
	display: none;
}

.toggleTextBox .textCon {
	line-height: 40rpx;
	margin-bottom: 30rpx;
}

.toggleTextBox .imgCon {
	display: block;
	width: 100%;
	height: auto;
	margin-bottom: 30rpx;
}

.toggleTextBox .toggleCon .con:last-child {
	margin-bottom: 0;
}

.searchBox {
	width: 100%;
	overflow: hidden;
	padding: 40rpx 0;
	
}

.searchBox .searchCon {
	width: 40%;
	margin: 0 40rpx;
	float: right;
	background: rgba(142, 142, 147, 0.16);
	height: 72rpx;
	border-radius: 16rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
}

.searchBox .searchCon .searchIcon {
	height: 28rpx;
	margin: 22rpx;
	display: block;
}
.searchBox .searchCon .searchInput {
	flex: 1;
	height: 60rpx;
	padding: 6rpx 9rpx;
	color: #ffffff;
}