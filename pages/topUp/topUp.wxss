/* pages/toHeader/toHeader.wxss */
@import "../../common/base.wxss";
.knowledgeBox .swiperContainer {
  padding: 0;
  padding-bottom: 40rpx;
}

.swiperBox {
  width: 100%;
  margin-top: 50rpx;
}

.swiper-item {
  position: relative;
}

.swiperImg{
  border-radius: 12rpx;
  width: 100%;
  height: auto;
  display: block;
}
.swiperTitle {
  background: #ffffff;
  height: 60rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  color: #000000;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}

.knowledgeBox .menuBox {
  border-bottom-width: 0;
}

.menuCon {
  overflow: hidden;
  margin-top: 30rpx;
}

.menuCon .menuItem {
  float: left;
  width: 30%;
  margin-right: 30rpx;
}

.rankItem {
  border-bottom: solid 1px rgba(255, 255, 255, 0.1);
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 40rpx 0;
}

.rankItem .imgBox {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.rankItem .imgBox .portrait {
  height: 60rpx;
  width: auto;
  display: block;
}

.rankItem .rankInfo {
  margin-right: 30rpx;
  height: 60rpx;
}

.rankItem .rankInfo .title {
  line-height: 30rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.rankItem .rankInfo .subTitle {
  line-height: 30rpx;
  font-size: 24rpx;
  color: #F46489;
}

.rankItem .chartIcon {
  height: 60rpx;
  width: auto;
  flex: 1;
}
.rankItem .chartIcon .icon{
  margin-top: -6rpx;
}

.rankItem .icon {
  height: 60rpx;
  width: auto;
  display: block;
}

.rankItem .arrowBox {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
}

.rankItem .arrowBox .arrowTxt {
  margin-right: 20rpx;
  color: rgba(255, 255, 255, 0.6);
}

.rankItem .arrowBox .icon{
  height: 48rpx;
}